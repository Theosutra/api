# Clés API (requis)
PINECONE_API_KEY=votre_clé_pinecone_ici
OPENAI_API_KEY=votre_clé_openai_ici

# Paramètres Pinecone
PINECONE_INDEX_NAME=nl2sql
PINECONE_ENVIRONMENT=gcp-starter

# Paramètres du modèle d'embedding
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Paramètres OpenAI
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.2
OPENAI_TIMEOUT=30

# Paramètres de traduction
EXACT_MATCH_THRESHOLD=0.95
TOP_K_RESULTS=5
SCHEMA_PATH=app/schemas/datasulting.sql

# Paramètres de l'API
API_PREFIX=/api/v1

# Sécurité (facultatif - si non défini, pas d'authentification)
API_KEY=votre_clé_api_secrète_ici
API_KEY_NAME=X-API-Key
ALLOWED_HOSTS=["*","localhost","127.0.0.1"]

# Paramètres serveur
DEBUG=false

# Cache Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600
CACHE_ENABLED=true