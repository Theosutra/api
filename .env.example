# Clés API (requis)
PINECONE_API_KEY=votre_clé_pinecone_ici
OPENAI_API_KEY=votre_clé_openai_ici
ANTHROPIC_API_KEY=votre_clé_anthropic_ici
GOOGLE_API_KEY=votre_clé_google_ici

# Paramètres Pinecone
PINECONE_INDEX_NAME=votre_index_pinecone_ici
PINECONE_ENVIRONMENT=votre_environnement_pinecone_ici

# Paramètres du modèle d'embedding
EMBEDDING_MODEL=votre_modèle_embedding_ici

# Paramètres LLM
DEFAULT_PROVIDER=openai
DEFAULT_OPENAI_MODEL=gpt-4o
DEFAULT_ANTHROPIC_MODEL=claude-3-opus-20240229
DEFAULT_GOOGLE_MODEL=gemini-pro
LLM_TEMPERATURE=0.2
LLM_TIMEOUT=30

# Paramètres de traduction
EXACT_MATCH_THRESHOLD=0.95
TOP_K_RESULTS=5
SCHEMA_PATH=votre_chemin_schema_ici

# Paramètres de l'API
API_PREFIX=/api/v1

# Sécurité (facultatif - si non défini, pas d'authentification)
API_KEY=votre_clé_api_secrète_ici
API_KEY_NAME=votre_nom_clé_api_ici
ADMIN_SECRET=votre_secret_admin_ici
ALLOWED_HOSTS=["*","localhost","127.0.0.1"]

# Paramètres serveur
DEBUG=false

# Cache Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600
CACHE_ENABLED=true

# Fonctionnalités avancées
METRICS_ENABLED=true